resource "aws_security_group" "rusk_jenkins" {
  name        = "rusk_jenkins_security_group"

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 8080  
    to_port     = 8080
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  vpc_id = "${aws_vpc.rusk_app.id}"
}

resource "aws_security_group" "rusk_web" {
  name        = "rusk_web_security_group"

  ingress {
    from_port   = 22
